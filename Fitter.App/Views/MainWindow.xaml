<Window 
        x:Class="Fitter.App.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:views="clr-namespace:Fitter.App.Views"
        xmlns:local ="clr-namespace:Fitter.App.Views"
        xmlns:viewModels="clr-namespace:Fitter.App.ViewModels"
        mc:Ignorable="d"
        Title="Fitter" Height="700" Width="1200" MinHeight="500" MinWidth="800" WindowStartupLocation="CenterScreen">
    <Grid Background="#1f2124">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" MinWidth="250" MaxWidth="300"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>
        <Grid Column="0">
            <views:LoginPanel/>
            <views:AppPanel/>
        </Grid>
        <Grid Column="1">
            <Grid.Background>
                <ImageBrush ImageSource="Images/loginPicture.png"/>
            </Grid.Background>
        </Grid>
    </Grid>
</Window>
